% {
%     LI      V0, ~TileFormat:RGBA-32
%     J       $DrawImageUI
%     LI      V1, ~TileDepth:RGBA-32
% }

% A0 = $ImageData
% A1 = posX
% A2 = posY
% A3 = opacity
#export:Function $DrawImageUI
{
    ADDIU   SP, SP, -38
    SW      RA, 34 (SP)
    
    SW      A1, 18 (SP) % startX
    SW      A2, 1C (SP) % startY
    SW      A3, 30 (SP) % opacity
    COPY    A3, V0      % tile fmt
    SW      V1, 10 (SP) % tile depth
    
    LW      A2, C (A0)  % width
    LW      A1, 8 (A0)  % height
    LW      V1, 4 (A0)
    SW      V1, 14 (SP) % palette
    LW      A0, 0 (A0)  % raster
    
    SW      R0, 20 (SP) % clipStartX
    SW      R0, 24 (SP) % clipStartY
    ORI t0, r0, 320`
    ORI t1, r0, 240`
    SW t0, 0028 (sp)
    SW t1, 002C (sp)
    %SWI     320`, 28 (SP) % clipMaxX
    %SWI     240`, 2C (SP) % clipMaxY
    JAL     8012E9A0
    NOP
    
    LW      RA, 34 (SP)
    JR      RA
    ADDIU   SP, SP, 38
}
